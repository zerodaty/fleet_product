            <field name="sequence">20</field>
        </record>

        <record id="fleet_vehicle_state_in_workshop" model="fleet.vehicle.state">
            <field name="name">En Taller</field>
            <field name="sequence">30</field>
        </record>

        <record id="fleet_vehicle_state_ready" model="fleet.vehicle.state">
            <field name="name">Listo para Entrega</field>
            <field name="sequence">40</field>
        </record>
        
        <record id="fleet_vehicle_state_sold" model="fleet.vehicle.state">
            <field name="name">Vendido / Desincorporado</field>
            <field name="sequence">99</field>
